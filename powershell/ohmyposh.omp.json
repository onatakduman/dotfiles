{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "<blue,bold>#</> ",
          "foreground": "white"
        },
        {
          "type": "session",
          "style": "plain",
          "template": "<cyan>{{ .UserName }}</> @ <green>{{ .HostName }}</> in ",
          "foreground": "white"
        },
        {
          "type": "path",
          "style": "plain",
          "template": "<yellow,bold>{{ .Path }}</> ",
          "foreground": "white",
          "properties": {
            "style": "full",
            "home_icon": "~"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "template": "on <blue>git</><cyan>:{{ .HEAD }}</>{{ if .Working.Changed }} <red>x</>{{ else }} <green>o</>{{ end }} ",
          "foreground": "white",
          "properties": {
            "fetch_status": true,
            "branch_icon": ""
          }
        },
        {
          "type": "python",
          "style": "plain",
          "template": "<green>{{ if .Venv }}{{ .Venv }}{{ end }}</> ",
          "foreground": "white"
        },
        {
          "type": "time",
          "style": "plain",
          "template": "[{{ .CurrentDate | date \"15:04:05\" }}]",
          "foreground": "white"
        },
        {
          "type": "status",
          "style": "plain",
          "template": "{{ if gt .Code 0 }} C:<red>{{ .Code }}</>{{ end }}",
          "foreground": "white"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "template": "<red,bold>$</> ",
          "foreground": "white"
        }
      ]
    }
  ]
}
